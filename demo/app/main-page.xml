<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout>
    <Label text="Server"/>
    <TextField id="server" text="" hint="server"/>
    <Button text="Connect" tap="{{ tapAction }}" />
    <Label text="Current Message from server:"/>
    <Label text="{{ message }}" class="message" textWrap="true"/>
  </StackLayout>
</Page>
